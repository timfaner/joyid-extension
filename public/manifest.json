{
    "manifest_version": 3,
    "name": "JoyID Wallet",
    "version": "1.0",
    "description": "JoyID Wallet Extension",
    "permissions": ["activeTab", "contextMenus","storage"],
    "web_accessible_resources": [
        {
            "resources":["chainlists.json","inpage.js"],
            "matches":["file:///*"]
        }],
    "action": {
      "default_icon": {
        "16": "icons/ico16.png",
        "32": "icons/ico32.png",
        "48": "icons/ico48.png",
        "128": "icons/ico128.png"
      }

    },
    "icons": {
        "16": "icons/ico16.png",
        "32": "icons/ico32.png",
        "48": "icons/ico48.png",
        "128": "icons/ico128.png"
      },
    "options_ui": {
        "page": "options.html",
        "open_in_tab": false
      },
    "background": {
      "service_worker": "background.js"
    },
    "content_scripts": [
      {
        "matches": ["<all_urls>"],
        "js": ["content.js"]
      }
    ]
    
  }